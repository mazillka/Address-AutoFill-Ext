{
    "manifest_version": 3,
    "name": "Address AutoFill",
    "version": "1.0",
    "description": "Extension to auto-fill address information.",
    "permissions": [
        "scripting",
        "storage",
        "sidePanel",
        "tabs"
    ],
    "background": {
        "service_worker": "./js/background.js"
    },
    "action": {
        "default_icon": {
            "16": "./icons/icon.png"
        }
    },
    "icons": {
        "16": "./icons/icon.png"
    },
    "side_panel": {
        "default_path": "./html/sidePanel.html"
    },
    "host_permissions": [
        "*://sellercentral.amazon.com/*",
        "*://mccombssupply.com/*",
        "*://pay.ebay.com/*"
    ]
}